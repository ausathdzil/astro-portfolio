---
import SkullIcon from "./icons/SkullIcon.astro";
import { ModeToggle } from "./ModeToggle";
---

<nav class="mb-2 flex justify-between items-center gap-4">
  <div class="flex justify-center items-center gap-2">
    <a
      href="/"
      aria-label="return to homepage"
    >
      <SkullIcon />

      <span class="sr-only">return to homepage</span>
    </a>

    <p class="text-base text-zinc-500">wrath</p>
  </div>
  <div class="flex items-center">
    <a
      href="https://open.spotify.com/playlist/3efExZxOEwFHj4MBgHYuXk?si=f4c6749503bc4459"
      target="_blank"
      aria-label="Link to ausath's music playlist"
      class="mr-5"
    >
      <p class="text-base text-zinc-500">
        <span class="link link-underline">
          music
        </span>
      </p>
    </a>

    <a
      href="/blog/"
      aria-label="Link to ausath's blog"
      class="mr-5"
    >
      <p class="text-base text-zinc-500">
        <span class="link link-underline">
          blog
        </span>
      </p>
    </a>

    <div class="mr-0">
      <ModeToggle client:load />
    </div>
  </div>
</nav>

<hr class="h-1 border-none bg-gradient-to-r from-emerald-500 to-sky-500 rounded" />

<style>
  .link-underline {
    border-bottom-width: 0;
    background-image: 
      linear-gradient(transparent, transparent),
      linear-gradient(#10b981, #0ea5e9);
    background-size: 0 2px;
    background-position: 0 100%;
    background-repeat: no-repeat;
    transition: background-size 0.1s ease-in-out;
  }
  .link-underline:hover {
    background-size: 100% 2px;
    background-position: 0 100%;
  }
</style>
