---
import SkullIcon from "./icons/SkullIcon.astro";
import PageLinks from "./PageLinks.astro";
import { ModeToggle } from "./ModeToggle";
---

<header class="mb-10">
  <nav class="mb-2 flex justify-between items-center gap-4">
    <div class="flex justify-center items-center gap-2">
      <a
        href="/"
        aria-label="return to homepage"
      >
        <SkullIcon />

        <span class="sr-only">return to homepage</span>
      </a>

      <p class="text-base text-zinc-500">wrath</p>
    </div>
    <div class="flex items-center">
      <PageLinks />

      <div class="mr-0">
        <ModeToggle client:load />
      </div>
    </div>
  </nav>

  <hr class="h-1 border-none bg-gradient-to-r from-pink-500 to-rose-500 dark:from-emerald-500 dark:to-sky-500 rounded" />
</header>
