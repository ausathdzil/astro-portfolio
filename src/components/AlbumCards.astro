---
import { Image } from "astro:assets";
import { type Album, getAlbums } from "@/lib/albums";

const albums: Album[] = getAlbums();
---

<div class="mb-8 grid grid-cols-2 sm:grid-cols-3 gap-8">
  {albums.map((album) => (
    <a 
      href={`/album/${album.id}`}
      transition:name={`image-${album.id}`}
      class="flex flex-col justify-center items-center sm:items-start h-full">
      <div class="hover:text-rose-500 dark:hover:text-cyan-500 text-center sm:text-left">
        <Image
          src={album.image}
          alt={`${album.title} album cover`}
          class="rounded-lg mb-4"
          width="220"
          height="220"
        />
        <h1 class="hidden lg:inline font-semibold text-lg">{album.title}</h1>
      </div>
      <p class="hidden lg:inline text-sm">{album.artist}</p>
    </a>
  ))}
</div>
